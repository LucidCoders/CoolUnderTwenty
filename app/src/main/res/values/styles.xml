<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="ProductSearchTheme" parent="AppTheme.NoActionBar">_
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorPrimary</item>

        <item name="searchViewStyle">@style/ProductSearchView</item>
        <item name="colorControlActivated">@color/colorPrimary</item>
        <item name="android:textColorSecondary">@color/colorPrimary</item>
    </style>

    <style name="ProductSearchView" parent="Widget.AppCompat.SearchView">
        <item name="searchIcon">@mipmap/ic_favorite_white_24dp</item>
        <item name="searchHintIcon">@null</item>
        <item name="queryBackground">@null</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>


    <style name="TextViewBase">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="TextViewPrimary" parent="TextViewBase">
        <item name="android:alpha">0.87</item>
    </style>

    <style name="TextViewSecondary" parent="TextViewBase">
        <item name="android:alpha">0.54</item>
    </style>

</resources>
